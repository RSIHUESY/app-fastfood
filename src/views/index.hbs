<div class="card card-body p-5 mt-4">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ description }} </p>
        <!-- DELETE REQUEST -->
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div style="text-align: center; justify-content: center;">
    <h1>Hola {{user.name}}</h1>
    <p clsss="lead">No hay productos disponibles</p>
  </div>
  {{/each}}

  {{!-- <div>
    <a class="btn btn-primary btn-lg" href="/auth/signup" role="button">Register</a>
  </div> --}}
</div>